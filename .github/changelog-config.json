{
	"categories": [
		{
			"title": "## 🚀 Features",
			"rules": [
				{ "pattern": "^feat(\\(.+\\))?: .+$", "on_property": "message" }
			]
		},
		{
			"title": "## 🐛 Bug Fixes",
			"rules": [{ "pattern": "^fix(\\(.+\\))?: .+$", "on_property": "message" }]
		},
		{
			"title": "## ⚠️ Breaking Changes",
			"rules": [{ "pattern": "^.*!: .+$", "on_property": "message" }]
		},
		{
			"title": "## ✅ Tests",
			"rules": [
				{ "pattern": "^test(\\(.+\\))?: .+$", "on_property": "message" }
			]
		},
		{
			"title": "## 🚧 Maintenance",
			"rules": [
				{ "pattern": "^(refactor|style): .+$", "on_property": "message" },
				{ "pattern": "^chore(\\(.+\\))?: .+$", "on_property": "message" },
				{ "pattern": "^ci(\\(.+\\))?: .+$", "on_property": "message" }
			]
		}
	],
	"sort": {
		"order": "ASC",
		"on_property": "mergedAt"
	},
	"template": "#{{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n#{{UNCATEGORIZED}}\n</details>",
	"commit_template": "- {{message}}"
}
